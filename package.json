{
  "name": "zerion-defi-sdk",
  "version": "1.0.0",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile": "npx hardhat compile",
    "deploy:development": "npx hardhat deploy --network development",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "deploy:kovan": "npx hardhat deploy --network kovan",
    "test": "npx hardhat test --show-stack-traces",
    "coverage": "npx hardhat coverage --network hardhat",
    "lint:solhint": "npx solhint \"contracts/**/*.sol\"",
    "lint:eslint": "eslint .",
    "lint": "npm run lint:solhint && npm run lint:eslint"
  },
  "lint-staged": {
    ".": "npx prettier --write",
    "test/**/*.js": "npx eslint --fix",
    "migrations_scripts/*.js": "npx eslint --fix"
  },
  "author": "Zerion Inc.",
  "license": "LGPL-3.0-only",
  "repository": "https://github.com/zeriontech/defi-sdk",
  "dependencies": {
    "@openzeppelin/contracts": "4.4.0"
  },
  "devDependencies": {
    "@babel/core": "7.16.5",
    "@babel/preset-env": "7.16.5",
    "@babel/register": "7.16.5",
    "@codechecks/client": "0.1.12",
    "@nomiclabs/hardhat-ethers": "2.0.3",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.0.0",
    "@types/node": "17.0.0",
    "chai": "4.3.4",
    "core-js": "3.20.0",
    "dotenv": "10.0.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.3",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.2",
    "ganache": "7.0.0-beta.1",
    "hardhat": "2.8.0",
    "hardhat-docgen": "1.2.1",
    "hardhat-gas-reporter": "1.0.6",
    "hardhat-tracer": "1.0.0-alpha.6",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "mrm": "3.0.10",
    "pinst": "2.1.6",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "regenerator-runtime": "0.13.9",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.17",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  }
}
