{
  "name": "zerion-defi-sdk",
  "version": "1.0.0",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "husky install",
    "compile": "npx hardhat compile",
    "deploy:development": "npx hardhat deploy --network development",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "deploy:kovan": "npx hardhat deploy --network kovan",
    "test": "npx hardhat test --show-stack-traces",
    "coverage": "npx hardhat coverage --network hardhat",
    "lint:solhint": "npx solhint \"contracts/**/*.sol\"",
    "lint:eslint": "eslint .",
    "lint": "npm run lint:solhint && npm run lint:eslint"
  },
  "lint-staged": {
    ".": "npx prettier --write",
    "test/**/*.js": "npx eslint --fix",
    "migrations_scripts/*.js": "npx eslint --fix"
  },
  "author": "Zerion Inc.",
  "license": "LGPL-3.0-only",
  "repository": "https://github.com/zeriontech/defi-sdk",
  "dependencies": {
    "@babel/core": "7.13.10",
    "@babel/preset-env": "7.13.12",
    "@babel/register": "7.13.8",
    "core-js": "3.9.1",
    "dotenv": "8.2.0",
    "hardhat-tracer": "1.0.0-alpha.3",
    "regenerator-runtime": "0.13.7"
  },
  "devDependencies": {
    "@codechecks/client": "0.1.10",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.2",
    "@types/node": "14.14.36",
    "chai": "4.3.4",
    "eslint": "7.22.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.22.1",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.0.32",
    "ganache-cli": "6.12.2",
    "hardhat": "2.1.2",
    "hardhat-docgen": "1.1.0",
    "hardhat-gas-reporter": "1.0.4",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "mrm": "2.6.1",
    "pinst": "2.1.6",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.6",
    "solhint": "3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "0.7.16",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
}
