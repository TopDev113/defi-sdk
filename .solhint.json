{
  "extends": "solhint:all",
  "rules": {
    "mark-callable-contracts": [
      "off"
    ],
    "reason-string": [
      "error",
      { "maxLength" : 50 }
    ],
    "function-max-lines": [
      "error", 99
    ],
    "compiler-version": [
      "error",
      "0.7.1"
    ],
    "private-vars-leading-underscore": [
      "off"
    ],
    "const-name-snakecase": [
      "off"
    ]
  }
}
